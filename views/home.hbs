


<div class="maincontent">

    <div class="password_enrty_div mb-1">
        <div class="row m-1">
            <button type="button" class="btn btn-outline-primary col-1" data-toggle="collapse"
                data-target="#password_input">Add Info <i class='fas fa-angle-right'></i></button>
            <div id="password_input" class="collapse col-10">
                {{!-- start of input form --}}
                <form action="/passwords" method="POST"> 
                    <div class="form-row align-items-center">
                        <div class="col-sm-3 my-1">
                            <label class="sr-only" for="inlineFormSystemName">System Name</label>
                            <input type="text" name="systemName" class="form-control" id="inlineFormSystemName"
                                placeholder="System Name">
                        </div>
                        <div class="col-sm-3 my-1">
                            <label class="sr-only" for="inlineFormInputGroupUsername">Username</label>
                            <div class="input-group">
                                <input type="text" name="userName" class="form-control"
                                    id="inlineFormInputGroupUsername" placeholder="Username">
                            </div>
                        </div>
                        <div class="col-sm-3 my-1">
                            <label class="sr-only" for="inlineFormInputpassWord">Password</label>
                            <div class="input-group">
                                <input type="text" name="passWord" class="form-control" id="inlineFormInputpassWord"
                                    placeholder="Password">
                            </div>
                        </div>
                        <div class="col-1 my-1">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
     

                {{!-- end of input form --}}
            </div>
        </div>
                   {{!-- catering for server side errors --}}
                {{#each errors}}
<div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each }}
        <hr>
    </div>
    <div class="results_div">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h4>system login credentials</h4>
                    <div class="table-responsive">
                        <table id="mytable" class="table table-bordred table-striped">
                            <thead>
                                <th><input type="checkbox" id="checkall" /></th>
                                <th>System </th>
                                <th>User Name</th>
                                <th>Password</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><input type="checkbox" class="checkthis" /></td>
                                    <td>Finacle </td>
                                    <td>admin123</td>
                                    <td>wer45332*435</td>
                                    <td>
                                        <p data-placement="top" data-toggle="tooltip" title="Edit"><button
                                                class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal"
                                                data-target="#edit"><i class="fa fa-pencil" aria-hidden="true"></i></button></p>
                                    </td>
                                    <td>
                                        <p data-placement="top" data-toggle="tooltip" title="Delete"><button
                                                class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal"
                                                data-target="#delete"><i class="fa fa-trash" aria-hidden="true"></i></button></p>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="clearfix"></div>
                        <ul class="pagination pull-right">
                            <li class="disabled"><a href="#"><span class="glyphicon glyphicon-chevron-left"></span></a>
                            </li>
