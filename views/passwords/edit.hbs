<div class=" col-6 m-auto card card-body">
  <h4>Edit Password</h4>
  <hr>
  <form action="/passwords" method="post">
    <div class="form-group">
      <input type="text" name="systemName" class="form-control" value="{{password.systemName}}" />
    </div>
    <div class="form-group">
      <input type="text" name="userName" class="form-control" value="{{password.userName}}">
    </div>
    <div class="form-group">
      <input type="text" name="passWord" class="form-control" value="{{password.passWord}}">
    </div>
     <button type="submit" class="btn btn-primary"> <i class="fa fa-refresh" aria-hidden="true"></i>&nbsp Update</button>
  </form>
</div>